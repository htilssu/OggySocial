<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".login.LoginFragment" android:id="@+id/loginLayout">


    <ImageView
            android:src="@drawable/login_logo"
            android:layout_width="118dp"
            android:layout_height="113dp" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="132dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="486dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="146dp"
            android:layout_marginEnd="147dp" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/login_logo_description"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:hint="@string/username_hint"
            android:id="@+id/tbUserName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="103dp"
            android:layout_marginEnd="98dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/imageView" android:layout_marginTop="96dp"
            android:minHeight="48dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/tbPassword"
            android:layout_marginEnd="98dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="104dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/tbUserName" android:layout_marginTop="24dp"
            android:minHeight="48dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
