<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".fragments.main.EditProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:drawableRight="@drawable/oggyedit48"
            android:gravity="center_horizontal"
            android:text="Chỉnh sửa hồ sơ"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="40sp"
            android:textStyle="bold|italic" />


        <EditText
            android:id="@+id/Edit_Education"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/mortarboard"
            android:drawableRight="@drawable/baseline_edit_24"
            android:drawablePadding="7dp"
            android:hint="Học vấn "
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/blue"
            android:textSize="20dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/Edit_bio"
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/chat"
            android:drawableRight="@drawable/baseline_edit_24"
            android:drawablePadding="7dp"
            android:hint="Chỉnh sửa thông tin"
            android:paddingLeft="10dp"
            android:textColor="@android:color/black"
            android:textColorHint="@color/blue"
            android:textSize="20dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/Edit_Sexual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:drawableLeft="@drawable/friends"
            android:drawablePadding="7dp"
            android:paddingLeft="10dp"
            android:text="Giới tính"
            android:textColor="@color/blue"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_male"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginLeft="10dp"
            android:drawablePadding="7dp"
            android:text="Nam"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_female"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawablePadding="7dp"
            android:text="Nữ"
            android:textColor="@color/colorPrimary"
            android:textSize="15dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radio_other"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:drawablePadding="7dp"
            android:text="Khác"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Lưu hồ sơ"
        android:textColor="@android:color/white"
        android:textSize="20dp" />

</LinearLayout>