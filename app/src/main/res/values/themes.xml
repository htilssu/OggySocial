<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OggySocial" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="Theme.OggySocial" parent="Base.Theme.OggySocial" />

    <style name="Theme.OggySocial.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OggySocial.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OggySocial.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
